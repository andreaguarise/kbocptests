<catalog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="CatalogSchema.xsd ">

    <effectiveDate>2014-01-01T00:00:00+00:00</effectiveDate>
    <catalogName>OCPCloudBase</catalogName>

    <recurringBillingMode>IN_ADVANCE</recurringBillingMode>

    <currencies>
        <currency>EUR</currency>
    </currencies>
    <units>
	<unit name="ramGB"/>
	<unit name="storageGB"/>
	<unit name="VCPU"/>
    </units>

    <products>
        <product name="IaaS">
            <category>BASE</category>
        </product>
        <product name="PaaS">
            <category>BASE</category>
        </product>
    </products>

    <rules>
        <changePolicy>
            <changePolicyCase>
                <policy>IMMEDIATE</policy>
            </changePolicyCase>
        </changePolicy>
        <changeAlignment>
            <changeAlignmentCase>
                <alignment>START_OF_BUNDLE</alignment>
            </changeAlignmentCase>
        </changeAlignment>
        <cancelPolicy>
            <cancelPolicyCase>
                <policy>IMMEDIATE</policy>
            </cancelPolicyCase>
        </cancelPolicy>
        <createAlignment>
            <createAlignmentCase>
                <alignment>START_OF_BUNDLE</alignment>
            </createAlignmentCase>
        </createAlignment>
        <billingAlignment>
            <billingAlignmentCase>
                <alignment>ACCOUNT</alignment>
            </billingAlignmentCase>
        </billingAlignment>
        <priceList>
            <priceListCase>
                <toPriceList>DEFAULT</toPriceList>
            </priceListCase>
        </priceList>
    </rules>

    <plans>
        <plan name="IaaS-monthly">
            <product>IaaS</product>
            <finalPhase type="EVERGREEN">
                <duration>
                    <unit>UNLIMITED</unit>
                </duration>
                <recurring>
                    <billingPeriod>MONTHLY</billingPeriod>
                    <recurringPrice>
                        <price>
                            <currency>EUR</currency>
                            <value>0.00</value>
                        </price>
                    </recurringPrice>
                </recurring>
		<usages>
             	<usage name="VCPU-consumption" billingMode="IN_ARREAR" usageType="CONSUMABLE">
                 <billingPeriod>MONTHLY</billingPeriod>
                 <tiers>
                     <tier>
                         <blocks>
                             <tieredBlock>
                                 <unit>VCPU</unit>
                                 <size>1</size>
                                 <prices>
                                     <price>
                                         <currency>EUR</currency>
                                         <value>0.168</value>
                                     </price>
                                 </prices>
                                 <max>10000</max>
                             </tieredBlock>
                         </blocks>
                     </tier>
                 </tiers>
             </usage>
	     <usage name="RAM-consumption" billingMode="IN_ARREAR" usageType="CONSUMABLE">
                 <billingPeriod>MONTHLY</billingPeriod>
                 <tiers>
                     <tier>
                         <blocks>
                             <tieredBlock>
                                 <unit>ramGB</unit>
                                 <size>1</size>
                                 <prices>
                                     <price>
                                         <currency>EUR</currency>
                                         <value>0.168</value>
                                     </price>
                                 </prices>
                                 <max>100000000</max>
                             </tieredBlock>
                         </blocks>
                     </tier>
                 </tiers>
             </usage>
	     <usage name="Storage-consumption" billingMode="IN_ARREAR" usageType="CONSUMABLE">
                 <billingPeriod>MONTHLY</billingPeriod>
                 <tiers>
                     <tier>
                         <blocks>
                             <tieredBlock>
                                 <unit>storageGB</unit>
                                 <size>1</size>
                                 <prices>
                                     <price>
                                         <currency>EUR</currency>
                                         <value>0.00197</value>
                                     </price>
                                 </prices>
                                 <max>100000000000</max>
                             </tieredBlock>
                         </blocks>
                     </tier>
                 </tiers>
             </usage>
         </usages>
        </finalPhase>
        </plan>
	<plan name="PaaS-monthly">
            <product>PaaS</product>
            <finalPhase type="EVERGREEN">
                <duration>
                    <unit>UNLIMITED</unit>
                </duration>
                <recurring>
                    <billingPeriod>MONTHLY</billingPeriod>
                    <recurringPrice>
                        <price>
                            <currency>EUR</currency>
                            <value>50.00</value>
                        </price>
                    </recurringPrice>
                </recurring>
		<usages>
             	<usage name="PaaS-VCPU-consumption" billingMode="IN_ARREAR" usageType="CONSUMABLE">
                 <billingPeriod>MONTHLY</billingPeriod>
                 <tiers>
                     <tier>
                         <blocks>
                             <tieredBlock>
                                 <unit>VCPU</unit>
                                 <size>1</size>
                                 <prices>
                                     <price>
                                         <currency>EUR</currency>
                                         <value>0.168</value>
                                     </price>
                                 </prices>
                                 <max>10000</max>
                             </tieredBlock>
                         </blocks>
                     </tier>
                 </tiers>
             </usage>
	     <usage name="PaaS-RAM-consumption" billingMode="IN_ARREAR" usageType="CONSUMABLE">
                 <billingPeriod>MONTHLY</billingPeriod>
                 <tiers>
                     <tier>
                         <blocks>
                             <tieredBlock>
                                 <unit>ramGB</unit>
                                 <size>1</size>
                                 <prices>
                                     <price>
                                         <currency>EUR</currency>
                                         <value>0.168</value>
                                     </price>
                                 </prices>
                                 <max>100000000</max>
                             </tieredBlock>
                         </blocks>
                     </tier>
                 </tiers>
             </usage>
	     <usage name="PaaS-Storage-consumption" billingMode="IN_ARREAR" usageType="CONSUMABLE">
                 <billingPeriod>MONTHLY</billingPeriod>
                 <tiers>
                     <tier>
                         <blocks>
                             <tieredBlock>
                                 <unit>storageGB</unit>
                                 <size>1</size>
                                 <prices>
                                     <price>
                                         <currency>EUR</currency>
                                         <value>0.00197</value>
                                     </price>
                                 </prices>
                                 <max>100000000000</max>
                             </tieredBlock>
                         </blocks>
                     </tier>
                 </tiers>
             </usage>
         </usages>
        </finalPhase>
        </plan>
    </plans>
    <priceLists>
        <defaultPriceList name="DEFAULT">
            <plans>
                <plan>IaaS-monthly</plan>
                <plan>PaaS-monthly</plan>
            </plans>
        </defaultPriceList>
    </priceLists>
</catalog>